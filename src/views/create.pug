extends templates/layout

block content
    h1 Create
    form(action='/create', method="post")
        input(type="text", minlength="3",required=true, name="title",placeholder="Title")
        input(type="number", required=true, name="year",placeholder="Year")
        input(type="text", required=true, name="synopsis",placeholder="Synopsis")
        input(type="number", step="0.1",required=true, name="rating",placeholder="Rating")
        input(type="text", required=true, name="genres",placeholder="Genres")
        input(type="submit", value="Create")